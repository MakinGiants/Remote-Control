<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/view_events_keyboard_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/btn_default"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <RadioGroup
        android:id="@+id/view_events_keyboard_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_events_keyboard_text"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/view_events_keyboard_radio_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="radioKeyboardTypeNumberOnTouch"
            android:text="Numbers" />

        <RadioButton
            android:id="@+id/view_events_keyboard_radio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="radioKeyboardTypeTextOnTouch"
            android:text="Text" />
    </RadioGroup>

</RelativeLayout>