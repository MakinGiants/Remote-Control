<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_events_layout_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/view_events_keyboard_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/view_events_keyboard"
            android:inputType="text" >
        </EditText>

        <EditText
            android:id="@+id/view_events_keyboard_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/view_events_numbers"
            android:inputType="phone" >
        </EditText>
    </LinearLayout>

</RelativeLayout>